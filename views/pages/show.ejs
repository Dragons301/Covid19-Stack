<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../layout/head')  %>
</head>

<body>
    <%- include ('../layout/header') %>
    <main>

        <form id="form-discoverPage" action="/search" method="POST">
            <label>Search Country : </label>
            <input class="input-discoverPage" type="text" name="country" placeholder="enter a countray name">

            <label>Search Date : </label>
            <input class="input-discoverPage" type="date" name="date" placeholder="enter a date ">

            <button class="input-discoverPage" id="ShowResult" type="submit">search</button>

        </form>

        <%if(result.Confirmed)
        {%>
        <section class="userInput">
            <h3>Country : <%=result.Country%> || </h3>
            <h3>Date : <%=result.Date%></h3>
        </section>
        <%}%>


        <div id="covid-result">

            <section class="section-covid">
                <img class="covid-img"
                    src="https://mediad.publicbroadcasting.net/p/shared/npr/styles/x_large/nprshared/202003/815006876.jpg"
                    alt="">
                <p  class="covid-p"> Number of confirmed cases :<%=result.Confirmed %> </p>
            </section>

            <section class="section-covid">
                <img class="covid-img"
                    src="https://www.aljazeera.com/wp-content/uploads/2020/04/8de4424271c4457d9c327c26dd27eca7_18.jpeg?resize=770%2C513"
                    alt="">
                <p class="covid-p">Number of deaths: <%=result.Deaths %> </p>
            </section>

            <section class="section-covid">
                <img class="covid-img"
                    src="https://image.cnbcfm.com/api/v1/image/106378357-1581057007448gettyimages-1198897006.jpeg?v=1581057097"
                    alt="">
                <p class="covid-p">Number of recovered cases :<%=result.Recovered %> </p>
            </section>

            <section class="section-covid">
                <img class="covid-img" src="https://images.financialexpress.com/2020/04/1-1052.jpg" alt="">
                <p class="covid-p">Numder of active cases: <%=result.Active %></p>
            </section>
        </div>


        <fieldset>
            <legend>
                <h2 id="title-world">World Record</h2>
            </legend>
            <div id="toral-record">
                <ul id="section-listCovid">
                    <li class="list-covid">Total confirmed cases: <strong><%=result.TotalConfirmed %></strong></li>
                    <li class="list-covid">Total Deaths: <strong><%=result.TotalDeaths %></strong> </li>
                    <li class="list-covid">Total Recovered cases: <strong> <%=result.TotalRecovered %></strong></li>
                </ul>
                <img src="../images/bgremov.png" alt="">
            </div>
        </fieldset>


        <form id="form-discoverPage" action="/searchTo" method="POST">
            <label>
                <input class="input-discoverPage" type="text" name="country" placeholder="enter a countray name">
            </label>
            <label>
                <input class="input-discoverPage" type="date" name="date" placeholder="enter a start date ">
            </label>
            <label>
                <input class="input-discoverPage" type="date" name="date2" placeholder="enter end date ">
            </label>
            <button type="submit" class="input-discoverPage" id="ShowResult" type="submit">search</button>

        </form>
        <section id="canvas-container">
            <canvas id="myChart"  ></canvas>
        </section>
       

        <input type="hidden" value="<%=result.listConfirm%>" id="array">
        <input type="hidden" value="<%=result.listDate%>" id="array2">

    </main>



    <%- include ('../layout/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="js/showResult.js"></script>
    <!-- <script>
        $('#ShowResult').on('click',()=>{
            $('.userInput').show();
            event.preventDefault();

        });
    </script> -->


</body>

</html>